{
    "name": "smash-messaging-endpoint",
    "version": "0.0.1",
    "description": "",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "start": "node -r dotenv/config .",
        "dev": "nodemon --watch 'src/**/*.ts' --exec 'node -r dotenv/config --loader ts-node/esm' src/index.ts",
        "build": "rm -rf dist/** && tsc",
        "prepare": "[ -n \"$CI\" ] || npm run prepare:husky",
        "prepare:husky": "husky",
        "test": "jest",
        "test:watch": "npm run test -- --watchAll",
        "test:coverage": "npm run test -- --coverage",
        "typecheck": "tsc --noEmit",
        "eslint:check": "eslint src/**/*.ts",
        "eslint-dist:check": "eslint dist/**/*.js",
        "generate-keys": "npm run --silent scripts/generate-keys >> .env",
        "scripts/generate-keys": "tsx scripts/generate-keys.ts",
        "prettier": "prettier --config .prettierrc 'src/**/*.ts' 'scripts/**/*.ts' 'tests/**/*.ts'",
        "prettier:format": "npm run prettier -- --write",
        "prettier:check": "npm run prettier -- --check",
        "circular-dependencies:check": "madge --circular dist/",
        "code:checks": "npm run eslint:check && npm run typecheck && npm run prettier:check",
        "build:checks": "npm run code:checks && npm run build && npm run eslint-dist:check && npm run circular-dependencies:check",
        "build:start": "npm run build:checks && npm run start",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "*.ts": "npm run prettier:format"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.5",
        "dotenv": "^16.4.7",
        "eslint": "^9.21.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.4.3",
        "madge": "^8.0.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.4.2",
        "socket.io-client": "^4.8.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.28.0"
    },
    "dependencies": {
        "@peculiar/webcrypto": "^1.4.6",
        "@socket.io/cluster-adapter": "^0.2.2",
        "2key-ratchet": "^1.0.18",
        "express": "^4.19.2",
        "socket.io": "^4.8.1",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7"
    }
}
