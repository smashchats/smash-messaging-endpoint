{
    "name": "smash-messaging-endpoint",
    "version": "0.0.1",
    "description": "",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "start": "node .",
        "dev": "nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/index.ts",
        "build": "rm -rf dist/** && tsc",
        "prepare": "husky",
        "test": "jest",
        "test:watch": "npm run test -- --watchAll",
        "test:coverage": "npm run test -- --coverage",
        "typecheck": "tsc --noEmit",
        "eslint:check": "eslint src/**/*.ts",
        "eslint-dist:check": "eslint dist/**/*.js",
        "prettier": "prettier --config .prettierrc 'src/**/*.ts'",
        "prettier:format": "npm run prettier -- --write",
        "prettier:check": "npm run prettier -- --check",
        "build:checks": "npm run typecheck && npm run build",
        "build:start": "npm run build:checks && npm run start",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "*.ts": "npm run prettier:format"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.11.24",
        "eslint": "^9.16.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.0",
        "prettier": "^3.4.2",
        "socket.io-client": "^4.8.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.18.0"
    },
    "dependencies": {
        "@peculiar/webcrypto": "^1.4.6",
        "@socket.io/cluster-adapter": "^0.2.2",
        "2key-ratchet": "^1.0.18",
        "express": "^4.19.2",
        "socket.io": "^4.7.5",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7"
    }
}
